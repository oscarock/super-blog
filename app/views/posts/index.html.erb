<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
				<% @posts.each do |post| %>
					<div class="panel panel-primary">
			      <div class="panel-heading">
			        <h3 class="panel-title"><%= post.title %></h3>
			      </div>
			      <div class="panel-body">
			    		<%# post.body.first(250) %>
			    		<%= truncate(post.body, :length => 250) %>
			      </div>
			      <div class="text-right fixed-bottom">
			        Fecha Creado: <strong><%= post.created_at %></strong>
			        <br>
			        Creado Por: <strong><%= post.user.email  %></strong>
			        <br>
			        <strong><%# link_to "Ver Mas", question_path(question) %></strong>
			      </div>
					</div>
				<% end %>		
		</div>
	</div>
</div>
	