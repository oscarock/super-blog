<div class="container">
  <% if @errors %>
      <% @errors.each do |error| %>
      <li class="text-center alert alert-danger"><%= error %></li>
      <% end %>
  <% end %>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2 class="text-center"><%= @title %></h2>
      <br>
      <%= form_for @posts do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control input-lg", placeholder: "Titulo" %><br>
        </div>
        <div class="form-group">
          <%= f.text_area :body, class: "form-control input-lg", placeholder: "Contenido" %><br>
        </div>
        <%= f.submit "Enviar", class: "btn btn-success btn-lg btn-block" %>
        <%= link_to 'Volver atras', posts_path, :class => "btn btn-primary btn-lg btn-block" %>
      <% end %>
    </div>
  </div>
</div>
